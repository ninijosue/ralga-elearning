{{!
    @template core_form/element-template

    Template for the form element wrapper template.

    Context variables required for this template:
    * label
    * required
    * advanced
    * helpbutton
    * error
    * element
        * id
        * name

    Example context (json):
    {
        "label": "Course full name",
        "required": true,
        "advanced": false,
        "error": null,
        "element": {
            "wrapperid": "fitem_id_fullname",
            "id": "id_fullname",
            "name": "fullname"
        }
    }
}}
<div id="{{element.wrapperid}}" class="form-group row px-0 mt-1 mb-3 mt-md-2 {{#error}}has-danger{{/error}} fitem {{#element.emptylabel}}femptylabel col-12{{/element.emptylabel}} {{#advanced}}advanced{{/advanced}} {{{element.extraclasses}}} {{{element.parentclasses}}}" {{#element.groupname}}data-groupname="{{.}}"{{/element.groupname}}>
    <div class="col-form-label col-md-3 mb-sm-1 mb-md-0 pl-0 text-md-right">
        {{# label}}{{$ label }}
        {{^element.staticlabel}}
        <label id="{{element.id}}_label" class="d-inline {{#element.hiddenlabel}}sr-only{{/element.hiddenlabel}}" for="{{element.id}}">
            {{{label}}}
        </label>
        {{/element.staticlabel}}
        {{#element.staticlabel}}
        <label class="d-inline-block {{#element.hiddenlabel}}sr-only{{/element.hiddenlabel}}">
            {{{label}}}
        </label>
        {{/element.staticlabel}}
        {{/ label }}{{/ label}}
        <sup class="sup">{{#required}}<span title="{{#str}}required{{/str}}" class="rui-req-icon">{{#pix}}req, core, {{#str}}required{{/str}}{{/pix}}</span>{{/required}}{{{helpbutton}}}</sup>
    </div>
    <div class="col-md-9 form-inline felement px-0" data-fieldtype="{{element.type}}">
        {{$ element }}
            <!-- Element goes here -->
            <!-- Put the show password here -->
            {{#js}}
            require(['jquery'], function($) {
                // Check if this is a password field
                if ($('#{{element.id}}').attr('type') === 'password') {
                    // Add show password button after the password field
                    $('#{{element.id}}').after('<button type="button" class="btn btn-link toggle-password" data-target="{{element.id}}">Show</button>');
                    
                    // Handle click event
                    $(document).on('click', '.toggle-password', function() {
                        var targetId = $(this).data('target');
                        var passwordField = $('#' + targetId);
                        
                        if (passwordField.attr('type') === 'password') {
                            passwordField.attr('type', 'text');
                            $(this).text('Hide');
                        } else {
                            passwordField.attr('type', 'password');
                            $(this).text('Show');
                        }
                    });
                }
            });
            {{/js}}
        {{/ element }}
        <div class="form-control-feedback invalid-feedback" id="{{element.iderror}}" {{#error}} style="display: block;"{{/error}}>
            {{{error}}}
        </div>
    </div>
</div>
{{#js}}
require(['theme_space/form-display-errors'], function(module) {
    module.enhance({{#quote}}{{element.id}}{{/quote}});
});

// Password toggle functionality for both id_password and id_password2
require(['jquery'], function($) {
    $(document).ready(function() {
        // Function to add toggle button to password fields
        function addPasswordToggle(passwordId) {
            var passwordField = $('#' + passwordId);
            
            if (passwordField.length && passwordField.attr('type') === 'password') {
                // Check if button already exists to avoid duplication
                var buttonId = passwordId + '_toggle';
                
                if (!$('#' + buttonId).length) {
                    // Add button after password field
                    passwordField.after('<button type="button" id="' + buttonId + '" class="btn btn-link toggle-password ml-2">Show</button>');
                    
                    // Handle click event for this specific button
                    $('#' + buttonId).on('click', function(e) {
                        e.preventDefault();
                        
                        if (passwordField.attr('type') === 'password') {
                            passwordField.attr('type', 'text');
                            $(this).text('Hide');
                        } else {
                            passwordField.attr('type', 'password');
                            $(this).text('Show');
                        }
                    });
                }
            }
        }
        
        // Add toggle buttons to both password fields
        addPasswordToggle('id_password');
        addPasswordToggle('id_password2');
    });
});
{{/js}}